<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spacebackground"
    tools:context=".Satellites">

    <TextView
        android:id="@+id/SatelliteScreenTV"
        android:layout_width="450dp"
        android:layout_height="105dp"
        android:layout_gravity="top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/textview_background"
        android:backgroundTint="@color/dark_grey"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="Satellites"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/satelliteRecyclerView"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:visibility="invisible"

        >


    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/satNameTestTV"
        android:layout_width="144dp"
        android:layout_height="114dp"
        android:layout_below="@+id/satelliteRecyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="191dp"
        android:text="TextView" />


</RelativeLayout>